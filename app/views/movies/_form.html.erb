<%= form_for @movie do |f| %>

<div class="form-movie">
    <div class="form-movie string optional">
        <%= f.label "标题", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <br>

    <div class="form-movie string optional">
        <%= f.label "内容", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

</div>

<br>
<%= f.submit "发送", class: "btn btn-primary", data: { disable_with: "发送中..." } %>
<% end %>
